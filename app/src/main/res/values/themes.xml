<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NutriPedia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryVariant">@color/card_background</item>
        <item name="cardBackgroundColor">@color/card_background_detail</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="buttonTint">@color/search_button</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#D8000000</item>
        <item name="textFillColor">#BF000000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowBackground">#00000000</item>

        <item name="editTextBackground">@drawable/edittext_background</item>
        <item name="buttonStyle">@drawable/search_button_background</item>
    </style>

    <style name="forListView">
        <item name="android:textColor">#A6000000</item>
    </style>
</resources>